<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net5.0</TargetFramework>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Title>IfoodMercado</Title>
    <Company>Allan Jhonny Pamponet do Carmo</Company>
    <Description>Sdk para uso da API do Ifood Mercado</Description>
    <PackageProjectUrl>https://github.com/jhonny2pamp/ifood_mercado</PackageProjectUrl>
    <RepositoryUrl>https://github.com/jhonny2pamp/ifood_mercado</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <PackageRequireLicenseAcceptance>True</PackageRequireLicenseAcceptance>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
  </ItemGroup>

  <ItemGroup>
    <None Update="LICENSE">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
